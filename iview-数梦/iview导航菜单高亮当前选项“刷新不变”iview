export default{
    data(){
       return{
            menus: [],  //èœå•åˆ—è¡¨...
            activemenu:0,
            selectMenu:null,
            openmenu:[]
       }
    },
    methods:{
            selectName(name){ //iviewæ–¹æ³•(è¿”å›name ä¸Šé¢çš„name çˆ¶çº§0 å­çº§ 0 - 1 å½¢å¼
                localStorage.setItem('selectMenu',name);
                var openName; //çˆ¶çº§éœ€è¦å¤„ç† name ä¸æ”¾å›çˆ¶çº§    
                if(name == 0){  //å› ä¸ºæ²¡æœ‰å­çº§çš„åªæœ‰ä¸€ä¸ªå°±ç›´æ¥åˆ¤æ–­äº†
                     openName = 0;
                }else{
                     openName =  name.charAt(0); //nameéƒ½æ˜¯å­çº§ 1 - 1  è·å– 1(å­—ç¬¦ä¸²)
                }
                localStorage.setItem('openName',openName);
            }   
    },
    created(){
        var selectMenu =  localStorage.getItem('selectMenu');
        var openName =  parseInt(localStorage.getItem('openName')); //å› ä¸ºopenmenuå€¼éœ€è¦æ•°å­—
        if(selectMenu == 0 || selectMenu == null){ //åˆå§‹è¿›æ¥ä¸ºnull
              this.activemenu = 0
         }else{
              this.openmenu.push(openName);
              this.activemenu = selectMenu;                                   
         }    
    }
}

