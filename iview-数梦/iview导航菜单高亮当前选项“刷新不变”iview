template
<Sider breakpoint="md" ref="sider_v" hide-trigger collapsible :collapsed-width="78" :style="{minWidth:swidth + 'px',width:swidth + 'px',maxWidth:swidth + 'px',height:elHeight + 'px',overflow:'auto'}" v-model="isCollapsed">
      <Menu width="auto" :active-name="activemenu" @on-select="selectName" :open-names='openmenu'  :accordion="true">
            <template v-for='(item,i) in menus'>
                   <Submenu v-if="item.children && item.children.length > 0" :name='i' :key='i'>
                           <template slot="title">
                                  <Icon :type='item.icon' />
                                  <span>{{item.title}}</span>
                           </template>
                           <MenuItem v-for='(it,j) in item.children' :name='i + "-" + j' :to='it.to' :key='i + "-" + j'>
                                  <span>{{it.title}}</span>
                           </MenuItem>
                   </Submenu>
                   <MenuItem v-else :name='i' :to="item.to" :target="item.target">
